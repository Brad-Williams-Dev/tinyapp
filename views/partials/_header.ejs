<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    
    
      <% if(username){ %>
        <form method="POST" action="/logout">
        <label style="padding-right:25px; color: white; font-size:large;">Logged in as: <%= username %>  </label>
        <button type="submit" style="color: rgb(20, 89, 225); background-color: white; border-radius: 6px; border: 1px solid rgb(20, 89, 225); padding: 4px 8px">Logout</button>
      </form>
      <% }else{ %>  
        <form method="POST" action="/login" >
        <input type="text" for="username" name="username" placeholder="username">
        <button type="submit" style="color: rgb(20, 89, 225); background-color: white; border-radius: 6px; border: 1px solid rgb(20, 89, 225); padding: 5px 10px">Login</button>
      </form>
     <% } %>
     
   
    

  </nav>
</header>